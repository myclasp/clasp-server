<div id="month" class="simple-calendar">
  <div class="calendar-heading">
    <% range = defined?(month) ? date_range(month) : date_range() %>

    <%= link_to 'Previous', group_month_path(group, month: range[0].advance(months:-1).strftime('%m-%Y')), method: :get, remote: true %>
    
    <%= content_tag :h3, range[0].strftime('%B %Y'), title: range[0].strftime('%d %b %Y'), class: "calendar-title"  %>

    <%= link_to 'Next', group_month_path(group, month: range[0].advance(months:1).strftime('%m-%Y')), method: :get, remote: true %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: "day" do %>
              <%= day.day %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>